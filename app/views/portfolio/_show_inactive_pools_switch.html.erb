<div class="flex justify-between mt-4 bg-red-100 text-red-800 rounded-lg p-4 md:w-1/4 w-full">
  <div>Show Inactive Pools</div>
  <!-- This example requires Tailwind CSS v2.0+ -->
  <!-- Enabled: "bg-indigo-600", Not Enabled: "bg-gray-200" -->
  <button role="switch" @click="show_inactive_pools = !show_inactive_pools" x-state:on="Enabled" x-state:off="Not Enabled" type="button" :class="[show_inactive_pools ? 'bg-blue-500' : 'bg-gray-400']"
    class="relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" role="switch" aria-checked="false">
    <!-- Enabled: "translate-x-5", Not Enabled: "translate-x-0" -->
    <span :class="[show_inactive_pools ? 'translate-x-5' : 'translate-x-0']" class="pointer-events-none inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200"></span>
  </button>
</div>
