<div x-data="{show_inactive_pools: false}" class="relative px-4 py-8 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20 h-screen">
  <div class="flex items-end justify-between mb-8">
    <div class="text-4xl font-bold text-black"><%= @portfolio.name %></div>
    <div>
      <div class="text-gray-500">Portfolio Total</div>
      <div class="text-4xl font-bold text-blue-500">
        <%= number_to_currency(@portfolio_total) %>
      </div>
    </div>
  </div>
  <div class="absolute inset-x-0 top-0 items-center justify-center hidden overflow-hidden md:flex md:inset-y-0">
    <svg viewBox="0 0 88 88" class="w-full max-w-screen-xl text-indigo-100">
      <circle fill="currentColor" cx="44" cy="44" r="15.5"></circle>
      <circle fill-opacity="0.2" fill="currentColor" cx="44" cy="44" r="44"></circle>
      <circle fill-opacity="0.2" fill="currentColor" cx="44" cy="44" r="37.5"></circle>
      <circle fill-opacity="0.3" fill="currentColor" cx="44" cy="44" r="29.5"></circle>
      <circle fill-opacity="0.3" fill="currentColor" cx="44" cy="44" r="22.5"></circle>
    </svg>
  </div>  
  <div class="relative grid gap-5 pb-6 sm:grid-cols-2 lg:grid-cols-4">
    <%= render @pools %>    
  </div>
  <div class="relative pb-4">
    <%= render 'show_inactive_pools_switch' %>
  </div>
  <div x-cloak x-show="show_inactive_pools" class="relative grid gap-5 pb-6 sm:grid-cols-2 lg:grid-cols-4">
    <%= render @inactive_pools %>    
  </div>
  
</div>

