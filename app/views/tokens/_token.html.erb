<tr class="border-b border-gray-600">
  <td class="py-2 pr-3 text-sm sm:pl-6 md:pl-0">
    <div class="flex text-center pl-6">      
      <%= render "components/binance_token_image", tokens: [token.coin.coingecko_id] %>
      <div class="text-left">
        <div class="text-lg text-white font-semibold"><%= token.coin.name %></div>
        <div class="hidden sm:inline-block text-gray-500 font-semibold"><%= number_to_currency(token.coin.price) %></div>
        <div class="inline-block sm:hidden text-gray-500 font-semibold"><%= token.amount %> <%= token.symbol %></div>
      </div>
    </div>
  </td>
  <td class="sm:text-xl py-2 px-3 text-center text-blue-500 sm:table-cell"><%= number_to_currency((token.coin.price * token.amount).round(2)) %></td>
  <td class="hidden text-xl py-2 px-3 text-center text-gray-500 sm:table-cell"><%= token.amount %> <%= token.symbol %></td>
</tr>
        
